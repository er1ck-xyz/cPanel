/* ===== Dashboard Styles ===== */
:root {
  --bg1: #0f2027;
  --bg2: #203a43;
  --accent1: #00d2ff;
  --accent2: #3a7bd5;
  --card-bg: rgba(255, 255, 255, 0.06);
  --glass-bg: rgba(255, 255, 255, 0.06);
}

body {
  margin: 0;
  padding: 0;
  font-family: "Poppins", system-ui, -apple-system, "Segoe UI", Roboto,
    "Helvetica Neue", Arial, sans-serif;
  color: #e9f0fb;
  background: var(--bg1);
  background: linear-gradient(135deg, var(--bg1), var(--bg2));
  height: 100vh;
  overflow: hidden;
}

#particles-js {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  width: 260px;
  height: 100%;
  background: linear-gradient(180deg, var(--bg1), var(--bg2));
  padding: 30px 20px;
  box-shadow: 2px 0 20px rgba(0, 0, 0, 0.5);
  z-index: 2;
  overflow-y: auto;
  transition: transform 0.25s ease;
}

.sidebar .sidebar-brand .logo {
  font-size: 1.8rem;
  font-weight: 600;
  color: var(--accent1);
  margin-bottom: 40px;
}

.sidebar-menu {
  list-style: none;
  padding: 0;
  margin: 0;
}

.sidebar-menu li {
  margin-bottom: 20px;
}

.sidebar-menu li a {
  display: flex;
  align-items: center;
  gap: 14px;
  color: #e9f0fb;
  text-decoration: none;
  font-size: 1rem;
  padding: 10px 12px;
  border-radius: 8px;
  transition: background 0.3s, color 0.3s;
}

.sidebar-menu li a i {
  width: 22px;
  min-width: 22px;
  text-align: center;
  font-size: 1.05rem;
  opacity: 0.95;
}

.sidebar-menu li a.active,
.sidebar-menu li a:hover {
  background: rgba(0, 210, 255, 0.15);
  color: #00d2ff;
}

.sidebar-menu li.sidebar-separator {
  margin: 30px 0 10px 0;
  text-transform: uppercase;
  font-size: 0.75rem;
  color: rgba(233, 240, 251, 0.6);
  padding-left: 12px;
}

.main-content {
  margin-left: 260px;
  padding: 30px 40px;
  position: relative;
  z-index: 1;
  height: 100%;
  overflow-y: auto;
}

.main-header {
  display: grid;
  grid-template-columns: auto 1fr auto;
  gap: 16px;
  align-items: center;
  margin-bottom: 24px;
}

.sidebar-toggle {
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.08);
  color: #e9f0fb;
  border-radius: 10px;
  padding: 10px 12px;
  cursor: pointer;
}
.sidebar-toggle i { font-size: 1.1rem; }

.main-header h2 {
  font-size: 1.7rem;
  margin: 0;
  color: #fff;
}

.header-actions { display: flex; align-items: center; gap: 12px; }
.user-chip {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 12px;
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 999px;
}
.user-chip i { color: var(--accent1); }

.breadcrumb {
  margin-top: 6px;
  font-size: 0.9rem;
  color: rgba(233, 240, 251, 0.7);
}

.breadcrumb a {
  color: var(--accent2);
  text-decoration: none;
}
.breadcrumb a:hover { text-decoration: underline; }

.cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 24px;
}

.card {
  background: var(--card-bg);
  backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.04);
  border-radius: 12px;
  padding: 26px 24px;
  text-align: center;
  color: #e9f0fb;
  transition: transform 0.3s, box-shadow 0.3s, background 0.3s;
}

.card:hover {
  transform: translateY(-6px);
  box-shadow: 0 14px 40px rgba(0, 210, 255, 0.2);
  background: rgba(255, 255, 255, 0.08);
}

.card .card-icon {
  width: 56px;
  height: 56px;
  margin: 0 auto 14px auto;
  border-radius: 50%;
  display: grid;
  place-items: center;
  background: linear-gradient(135deg, var(--accent1), var(--accent2));
  color: #042033;
  box-shadow: 0 8px 20px rgba(58, 123, 213, 0.25);
}
.card .card-icon i { font-size: 1.25rem; }

/* Responsive */
@media (max-width: 1024px) {
  .main-content { margin-left: 0; padding: 24px; }
  .sidebar { transform: translateX(-100%); }
  body.sidebar-open .sidebar { transform: translateX(0); }
}

/* Focus visibility */
a:focus-visible, button:focus-visible { outline: 2px solid var(--accent1); outline-offset: 2px; }

.card .card-title {
  font-size: 1.2rem;
  font-weight: 600;
  color: #fff;
}

.card .card-desc {
  margin-top: 6px;
  font-size: 0.9rem;
  color: rgba(233, 240, 251, 0.75);
}
